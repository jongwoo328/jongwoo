# 날짜표시 locale
if [ -n "$LC_TIME" ]; then
    export LC_TIME=ko_KR.UTF-8
fi

# Default EDITOR
export EDITOR="nvim"

# ls -> lsd alias
if command -v lsd >/dev/null 2>&1; then
    alias ls='lsd --date "+%Y/%m/%d %H:%M:%S %p"'
    alias l='ls -l'
    alias la='ls -a'
    alias lla='ls -la'
    alias lt='ls --tree'
fi

